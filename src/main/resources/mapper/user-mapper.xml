<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.mahmutcopoglu.bankingsystemproject.repository.UserRepository">

    <select id="findByUsername" resultType="User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="findById" resultType="User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="getAllUsers" resultType="User">
        SELECT * FROM user
    </select>

    <insert id="saveUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(username, email,password,authorities) VALUES(#{username}, #{email}, #{password}, #{authorities})
    </insert>

    <update id="updateEnabled" parameterType="int">
        UPDATE user SET enabled = #{enabled} WHERE id = #{id}
    </update>

    <select id="isUserExist" resultType="int">
        SELECT COUNT(*) FROM user WHERE username = #{username} OR email = #{email}
    </select>

    <select id="getUser" resultMap="userDetailResultMap">
            SELECT *, account.id as account_id, user.id as user_id, bank.id as bank_id FROM user
        INNER JOIN account ON account.user = user.id
        INNER JOIN bank ON bank.id=account.bank WHERE user.id = #{id}
    </select>

    <resultMap type="User" id="userDetailResultMap" autoMapping="true">
        <id column="user_id" property="id"/>
        <collection property="accounts" ofType="Account" autoMapping="true">
            <id column = "account_id" property = "id"/>
            <association property="bank" autoMapping = "true">
                <id column = "bank" property = "id"/>
            </association>
        </collection>
    </resultMap>

</mapper>